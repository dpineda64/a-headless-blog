<%= form_for @changeset, "#", [phx_change: :render, phx_submit: :submit, class: "md-editor__form"] , fn f -> %>
  <div class="md-editor__header">
    <div class="md-editor__header-title">
      <%= text_input f, :title, class: "py-3 bg-transparent px-4", placeholder: "Post Title" %>
      <%= error_tag f, :title %>
    </div>
    <div class="md-editor__header-status">
      <div class="px-5 inline-block uppercase text-sm font-bold text-gray-600">
        <%= input_value f, :status %>
      </div>
      <%= submit "Save", class: "btn btn-primary", phx_disable_with: "Saving..." %>
    </div>
  </div>
  <div class="md-editor__area">
    <%= textarea f, :content, placeholder: "Write Your content", class: "" %>
  </div>
<% end %>

<div class="md-editor__preview">
  <%= raw(@preview) %>
</div>
